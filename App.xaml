<Application
    x:Class="HockeyPlaybook.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HockeyPlaybook"
    xmlns:localData="using:HockeyPlaybook.Data">

    <Application.Resources>
        <!-- Application-specific resources -->

        <x:String x:Key="AppName">HockeyPlaybook</x:String>
        <DataTemplate x:Key="myHeader">
            <ContentPresenter>
                <TextBlock Text="{Binding}" FontFamily="Segoe WP Light"  FontSize="48"  Margin="0,0,0,0" Foreground="Black"  />
            </ContentPresenter>

        </DataTemplate>
    </Application.Resources>
</Application>
